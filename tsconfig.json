{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "lib": ["es2020", "dom"],
    "resolveJsonModule": true
  },
  "include": ["./src"],
  "references": [
    {
      "path": "./packages/plugin-synthetics"
    }
  ]
}
